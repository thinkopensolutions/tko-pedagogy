<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="pedagogy_class_discipline_teacher_form" model="ir.ui.view">
            <field name="name">pedagogy_class_discipline_teacher_form</field>
            <field name="model">pedagogy.class.discipline.teacher</field>
            <field name="arch" type="xml">
                <form string="Discipline Teacher" version="7.0">
                    <sheet>
                        <group col="4">
                            <field name="teacher_id" colspan="4" context="{'default_is_teacher':1}"/>
                            <field name="discipline_id" colspan="4"/>
                            <field name="class_year_id" colspan="4"
                                   on_change="onchange_get_dates_from_year(class_year_id, date_start, date_end)"/>
                            <field name="date_start" colspan="2"
                                   on_change="onchange_date_start(date_start, class_year_id)"/>
                            <field name="date_end" colspan="2" on_change="onchange_date_end(date_end, class_year_id)"/>
                            <field name="observations" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pedagogy_class_discipline_teacher_tree" model="ir.ui.view">
            <field name="name">pedagogy_class_discipline_teacher_tree</field>
            <field name="model">pedagogy.class.discipline.teacher</field>
            <field name="arch" type="xml">
                <tree string="Disciplines Teachers">
                    <field name="name"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </tree>
            </field>
        </record>

        <record id="pedagogy_class_discipline_teacher_search" model="ir.ui.view">
            <field name="name">pedagogy_class_discipline_teacher_search</field>
            <field name="model">pedagogy.class.discipline.teacher</field>
            <field name="arch" type="xml">
                <search string="Disciplines Teachers">
                    <field name="name"/>
                    <field name="class_year_id"/>
                    <field name="discipline_id"/>
                    <field name="teacher_id"/>
                    <group string="School Year">
                        <filter
                                string="Future Years"
                                name="future_years"
                                domain="[('class_year_id.year_id.this_year', '=', 'future')]"/>
                        <filter
                                string="Next Year"
                                name="next_year"
                                domain="[('class_year_id.year_id.this_year', '=', 'next')]"/>
                        <filter
                                string="This Year"
                                name="this_year"
                                domain="[('class_year_id.year_id.this_year', '=', 'this')]"/>
                        <filter
                                string="Last Year"
                                name="last_year"
                                domain="[('class_year_id.year_id.this_year', '=', 'last')]"/>
                        <filter
                                string="Old Years"
                                name="old_years"
                                domain="[('class_year_id.year_id.this_year', '=', 'old')]"/>
                    </group>
                    <group string="Group By...">
                        <filter string="Class Year" name="class_year_id" context="{'group_by': 'class_year_id'}"/>
                        <filter string="Discipline" name="discipline_id" context="{'group_by':'discipline_id'}"/>
                        <filter string="Teacher" name="teacher_id" context="{'group_by':'teacher_id'}"/>
                        <filter string="Start date" name="date_start" context="{'group_by':'date_start'}"/>
                        <filter string="End Date" name="date_end" context="{'group_by':'date_end'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="pedagogy_class_discipline_teacher_action" model="ir.actions.act_window">
            <field name="name">Discipline Teacher</field>
            <field name="res_model">pedagogy.class.discipline.teacher</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_this_year': 'this'}</field>
            <field name="domain">[]</field>
        </record>

        <menuitem
                id="menu_teacher"
                name="Disciplines Teachers"
                parent="menu_disciplines_config"
                action="pedagogy_class_discipline_teacher_action"
                sequence="30"/>

    </data>
</openerp>

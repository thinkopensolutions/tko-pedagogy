<openerp>
    <data>

        <!-- Billing -->
        <record id="pedagogy_billing_account_invoice_view" model="ir.ui.view">
            <field name="name">pedagogy.billing.account.invoice.form</field>
            <field name="model">pedagogy.billing.account.invoice.create</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Create Invoices" version="7.0">
                    <group>
                        <field name="group_by_invoicee"/>
                    </group>
                    <footer>
                        <button class="oe_highlight" string="Create Invoices" name="invoice_create" type="object"
                                default_focus="1"/>
                        <button special="cancel" string="Close"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_pedagogy_billing_account_invoice"
                    multi="True"
                    key2="client_action_multi"
                    name="Create Invoices"
                    res_model="pedagogy.billing.account.invoice.create"
                    src_model="pedagogy.billing"
                    view_mode="form"
                    target="new"
                    view_type="form"/>

        <!-- Billing By Period -->
        <record id="pedagogy_billing_run_account_invoice_view" model="ir.ui.view">
            <field name="name">pedagogy.billing.run.account.invoice.form</field>
            <field name="model">pedagogy.billing.run.account.invoice.create</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Create Invoices">
                    <field name="group_by_invoicee"/>
                    <separator string="Create Invoices" colspan="4"/>
                    <group colspan="4" col="6">
                        <button icon="gtk-cancel" special="cancel" string="Close"/>
                        <button icon="terp-camera_test" string="Create Invoices" name="invoice_create" type="object"
                                default_focus="1"/>
                    </group>
                </form>
            </field>
        </record>

        <act_window id="action_pedagogy_billing_run_account_invoice"
                    multi="True"
                    key2="client_action_multi"
                    name="Create Invoices"
                    res_model="pedagogy.billing.run.account.invoice.create"
                    src_model="pedagogy.billing.run"
                    view_mode="form"
                    target="new"
                    view_type="form"/>

    </data>
</openerp>

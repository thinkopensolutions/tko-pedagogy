<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="pedagogy_billing_report_invoice_tree">
            <field name="name">pedagogy.billing.report.invoice.tree</field>
            <field name="model">pedagogy.billing.report</field>
            <field name="inherit_id" ref="pedagogy_billing.pedagogy_billing_report_tree"/>
            <field name="arch" type="xml">
                <field name="state" position="before">
                    <field name="invoice_id"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_pedagogy_billing_report_invoice_search">
            <field name="name">pedagogy.billing.report.invoice.search</field>
            <field name="model">pedagogy.billing.report</field>
            <field name="inherit_id" ref="pedagogy_billing.view_pedagogy_billing_report_search"/>
            <field name="arch" type="xml">
                <filter name="confirmed" position="before">
                    <filter string="Paid" name="paid" domain="[('state','=','paid')]"/>
                    <filter string="Invoiced" name="invoiced" domain="[('state','=','invoiced')]"/>
                    <separator orientation="vertical"/>
                </filter>
                <field name="state" position="before">
                    <field name="invoice_id"/>
                </field>
            </field>
        </record>

    </data>
</openerp>

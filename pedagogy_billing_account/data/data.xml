<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <!--
       Product
       -->
        <record id="product_rule_basic" model="product.product">
            <field name="name">Prestação Mensal Base</field>
            <field name="default_code">BASE</field>
            <field name="sale_ok" eval="True"/>
            <field name="type">service</field>
        </record>

        <record id="product_rule_mensal" model="product.product">
            <field name="name">Total Prestação Mensal</field>
            <field name="default_code">PRS</field>
            <field name="sale_ok" eval="True"/>
            <field name="type">service</field>
        </record>

        <!-- Rule -->
        <record id="pedagogy_billing.billing_rule_basic" model="pedagogy.rule">
            <field name="name">Prestação Mensal Base</field>
            <field name="sequence" eval="6"/>
            <field name="code">BASE</field>
            <field name="product_id" ref="product_rule_basic"/>
            <field name="appears_on_payslip" eval="True"/>
            <field name="billing_category_id" ref="pedagogy_billing.cat_basic"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = enrollment_id.monthly_fee</field>
        </record>

        <!-- NET Valor Base + Descontos -->
        <record id="pedagogy_billing.billing_rule_mensal" model="pedagogy.rule">
            <field name="name">Total Prestação Mensal</field>
            <field name="sequence" eval="6"/>
            <field name="code">PRS</field>
            <field name="product_id" ref="product_rule_mensal"/>
            <field name="appears_on_payslip" eval="True"/>
            <field name="billing_category_id" ref="pedagogy_billing.cat_net"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = categories.BASE + categories.DSC</field>
        </record>

    </data>
</openerp>
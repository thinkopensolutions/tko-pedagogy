<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="invoice_form_inherit" model="ir.ui.view">
            <field name="name">invoice.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <page string="Payments" position="after">
                    <page string="Billings">
                        <field name="billing_ids" nolabel="1">
                            <tree>
                                <field name="number"/>
                                <field name="student_id"/>
                                <field name="invoicee_id"/>
                                <field name="name"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="state"/>
                                <field name="company_id" groups="base.group_multi_company" widget="selection"/>
                                <field name="run_id" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>

        <record id="invoice_supplier_form_inherit" model="ir.ui.view">
            <field name="name">invoice.supplier.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <page string="Payments" position="after">
                    <page string="Billings">
                        <field name="billing_ids" nolabel="1">
                            <tree>
                                <field name="number"/>
                                <field name="student_id"/>
                                <field name="invoicee_id"/>
                                <field name="name"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="state"/>
                                <field name="company_id" groups="base.group_multi_company" widget="selection"/>
                                <field name="run_id" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>
    </data>
</openerp>

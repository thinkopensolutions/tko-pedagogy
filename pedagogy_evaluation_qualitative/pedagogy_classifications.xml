<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="pedagogy_evaluation_student_inherited_form" model="ir.ui.view">
            <field name="name">pedagogy_evaluation_student_inherited_form</field>
            <field name="model">pedagogy.evaluation.student</field>
            <field name="inherit_id" ref="pedagogy_evaluations.pedagogy_evaluation_student_form"/>
            <field name="arch" type="xml">
                <field name="arithmetic_classification" position="replace">
                    <field name="arithmetic_classification" readonly="1" colspan="2"/>
                    <field name="arithmetic_qualitative" string="" colspan="2" nolabel="1"/>
                </field>
                <field name="teacher_classification" position="after">
                    <field name="teacher_qualitative" string="" colspan="2" nolabel="1"/>
                </field>
                <field name="teacher_observations" position="replace">
                    <field name="teacher_observations" colspan="4"/>
                </field>
                <field name="final_classification" position="after">
                    <field name="final_qualitative" string="" colspan="2" nolabel="1"/>
                </field>
                <field name="other_observations" position="replace">
                    <field name="other_observations" colspan="4"/>
                </field>
            </field>
        </record>

        <record id="pedagogy_evaluation_student_inherited_tree" model="ir.ui.view">
            <field name="name">pedagogy_evaluation_student_inherited_tree</field>
            <field name="model">pedagogy.evaluation.student</field>
            <field name="inherit_id" ref="pedagogy_evaluations.pedagogy_evaluation_student_tree"/>
            <field name="arch" type="xml">
                <field name="arithmetic_classification" position="after">
                    <field name="arithmetic_qualitative" string=""/>
                </field>
                <field name="teacher_classification" position="after">
                    <field name="teacher_qualitative" string=""/>
                </field>
                <field name="final_classification" position="after">
                    <field name="final_qualitative" string=""/>
                </field>
            </field>
        </record>

        <record id="res_partner_inherited_form" model="ir.ui.view">
            <field name="name">res_partner_inherited_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="pedagogy_evaluations.res_partner_inherited_form"/>
            <field name="arch" type="xml">
                <field name="final_classification" position="replace">
                    <field name="final_qualitative" string="" colspan="2" nolabel="1"/>
                </field>
            </field>
        </record>

    </data>
</openerp>

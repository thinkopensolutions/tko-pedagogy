<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="pedagogy_evaluation_qualitative_form" model="ir.ui.view">
            <field name="name">pedagogy_evaluation_qualitative_form</field>
            <field name="model">pedagogy.evaluation.qualitative</field>
            <field name="arch" type="xml">
                <form string="Qualitative" version="7.0">
                    <sheet>
                        <group col="4">
                            <field name="name" string="Note" colspan="4"/>
                            <field name="note_from" string="From (&gt;=)" colspan="2"/>
                            <field name="note_to" string="To (&lt;)" colspan="2"/>
                            <field name="observations" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pedagogy_evaluation_qualitative_tree" model="ir.ui.view">
            <field name="name">pedagogy_evaluation_qualitative.tree</field>
            <field name="model">pedagogy.evaluation.qualitative</field>
            <field name="arch" type="xml">
                <tree string="Qualitative">
                    <field name="name"/>
                    <field name="note_from"/>
                    <field name="note_to"/>
                </tree>
            </field>
        </record>

        <record id="pedagogy_evaluation_qualitative_action" model="ir.actions.act_window">
            <field name="name">Qualitative Grades</field>
            <field name="res_model">pedagogy.evaluation.qualitative</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add qualitative evaluation.
                </p>
            </field>
        </record>

        <menuitem
                id="menu_evaluation_qualitative"
                name="Qualitative Grades"
                parent="pedagogy_evaluations.menu_evaluations_root"
                action="pedagogy_evaluation_qualitative_action"
                sequence="8"/>

    </data>
</openerp>

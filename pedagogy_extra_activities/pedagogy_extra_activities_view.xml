<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="pedagogy_class_type_form" model="ir.ui.view">
            <field name="model">pedagogy.class.type</field>
            <field name="arch" type="xml">
                <form string="Class Type" version="7.0">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="is_curricular"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pedagogy_class_type_tree" model="ir.ui.view">
            <field name="model">pedagogy.class.type</field>
            <field name="arch" type="xml">
                <tree string="Class Type">
                    <field name="name"/>
                    <field name="is_curricular"/>
                </tree>
            </field>
        </record>

        <record id="pedagogy_class_type_search" model="ir.ui.view">
            <field name="model">pedagogy.class.type</field>
            <field name="arch" type="xml">
                <search string="Class Types">
                    <group>
                        <field name="name"/>
                    </group>
                    <group expand="0" string="Group By...">
                        <filter string="Curricular" name="is_curricular" context="{'group_by':'is_curricular'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="pedagogy_class_inherited_form" model="ir.ui.view">
            <field name="model">pedagogy.class</field>
            <field name="inherit_id" ref="pedagogy_base.pedagogy_class_form"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="class_type_id"/>
                </field>
            </field>
        </record>

        <record id="pedagogy_class_inherited_tree" model="ir.ui.view">
            <field name="model">pedagogy.class</field>
            <field name="inherit_id" ref="pedagogy_base.pedagogy_class_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="class_type_id"/>
                </field>
            </field>
        </record>

        <record id="pedagogy_class_inherited_search" model="ir.ui.view">
            <field name="model">pedagogy.class</field>
            <field name="inherit_id" ref="pedagogy_base.pedagogy_class_search"/>
            <field name="arch" type="xml">
                <field name="group_id" position="after">
                    <group string="Class Type">
                        <filter string="Curricular Class" name="curricular"
                                domain="[('class_type_id.is_curricular','=',1)]"/>
                        <filter string="Extra Activity" name="extra_activity"
                                domain="[('class_type_id.is_curricular','=',0)]"/>
                    </group>
                </field>
                <filter string="Group" position="after">
                    <filter string="Type" name="class_type_id" context="{'group_by': 'class_type_id'}"/>
                </filter>
            </field>
        </record>

        <record id="pedagogy_class_year_inherited_form" model="ir.ui.view">
            <field name="model">pedagogy.class.year</field>
            <field name="inherit_id" ref="pedagogy_base.pedagogy_class_year_form"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="class_type_id" colspan="4"/>
                </field>
            </field>
        </record>

        <record id="pedagogy_class_year_inherited_tree" model="ir.ui.view">
            <field name="model">pedagogy.class.year</field>
            <field name="inherit_id" ref="pedagogy_base.pedagogy_class_year_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="class_type_id"/>
                </field>
            </field>
        </record>

        <record id="pedagogy_class_year_inherited_search" model="ir.ui.view">
            <field name="model">pedagogy.class.year</field>
            <field name="inherit_id" ref="pedagogy_base.pedagogy_class_year_search"/>
            <field name="arch" type="xml">
                <field name="capacity" position="after">
                    <group string="Class Type">
                        <filter string="Curricular Class" name="curricular"
                                domain="[('class_type_id.is_curricular','=',1)]"/>
                        <filter string="Extra Activity" name="extra_activity"
                                domain="[('class_type_id.is_curricular','=',0)]"/>
                    </group>
                </field>
            </field>
        </record>

        <record id="pedagogy_class_type_action" model="ir.actions.act_window">
            <field name="name">Class Types</field>
            <field name="res_model">pedagogy.class.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a class type.
                </p>
            </field>
        </record>

        <record id="pedagogy_class_curricular_action" model="ir.actions.act_window">
            <field name="name">Curricular Classes</field>
            <field name="res_model">pedagogy.class</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_curricular": 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a curricular class.
                </p>
            </field>
        </record>

        <record id="pedagogy_class_non_curricular_action" model="ir.actions.act_window">
            <field name="name">Extra Activities</field>
            <field name="res_model">pedagogy.class</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_extra_activity": 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add an extra activity class.
                </p>
            </field>
        </record>

        <menuitem
                id="menu_classes_types"
                name="Class Types"
                parent="pedagogy_base.menu_pedagogy_config"
                action="pedagogy_class_type_action"
                sequence="25"/>

        <menuitem
                id="menu_classes_curricular"
                name="Curricular Classes"
                parent="pedagogy_base.menu_classes"
                action="pedagogy_class_curricular_action"
                sequence="20"/>

        <menuitem
                id="menu_classes_non_curricular"
                name="Extra Activities"
                parent="pedagogy_base.menu_classes"
                action="pedagogy_class_non_curricular_action"
                sequence="30"/>

    </data>
</openerp>

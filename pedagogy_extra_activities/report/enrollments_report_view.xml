<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="pedagogy_enrollments_report_inherited_tree" model="ir.ui.view">
            <field name="name">pedagogy_enrollments_report_tree</field>
            <field name="model">pedagogy.enrollments.report</field>
            <field name="inherit_id" ref="pedagogy_base.pedagogy_enrollments_report_tree"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="class_id" position="after">
                    <field name="type"/>
                </field>
            </field>
        </record>

        <record id="pedagogy_enrollments_report_type_inherited_search" model="ir.ui.view">
            <field name="name">pedagogy_enrollments_report_type_search</field>
            <field name="model">pedagogy.enrollments.report</field>
            <field name="inherit_id" ref="pedagogy_base.pedagogy_enrollments_report_search"/>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <field name="class_id" position="after">
                    <field name="type" widget="selection"/>
                </field>
                <filter name="year_id" position="before">
                    <filter string="Type" name="type" context="{'group_by':'type'}"/>
                </filter>
            </field>
        </record>

    </data>
</openerp>

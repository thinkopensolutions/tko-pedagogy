<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Enrollments Grouped By Year Class -->
        <record id="enrollments_grouped_by_year_class_type_inherited_tree" model="ir.ui.view">
            <field name="name">enrollments_grouped_by_year_class_type_inherited_tree</field>
            <field name="model">enrollments.grouped.by.year.class.type</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="pedagogy_base.enrollments_grouped_by_year_class_tree"/>
            <field name="arch" type="xml">
                <field name="year_id" position="after">
                    <field name="type" invisible="1"/>
                </field>
            </field>
        </record>

        <record id="enrollments_grouped_by_year_class_type_inherited_action" model="ir.actions.act_window">
            <field name="name">Enrollments Grouped By Year Class Type</field>
            <field name="res_model">enrollments.grouped.by.year.class.type</field>
            <field name="view_mode">tree</field>
            <field name="context">{'group_by': ['year','class','type']}</field>
            <field name="view_id" ref="enrollments_grouped_by_year_class_type_inherited_tree"/>
        </record>

    </data>
</openerp>
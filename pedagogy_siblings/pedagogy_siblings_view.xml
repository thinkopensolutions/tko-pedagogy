<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="res_partner_inherit_form" model="ir.ui.view">
            <field name="name">res_partner_inherit_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="pedagogy_base.res_partner_inherited_form"/>
            <field name="arch" type="xml">
                <field name="birth_date" position="after">
                    <field name="father_id" on_change="onchange_parents(father_id, mother_id)" colspan="4"
                           domain="[('is_company', '=', False), ('is_student', '=', False)]"/>
                    <field name="mother_id" on_change="onchange_parents(father_id, mother_id)" colspan="4"
                           domain="[('is_company', '=', False), ('is_student', '=', False)]"/>
                    <field name="num_brothers" colspan="4" string="Brothers"/>
                </field>
                <page string="Enrollments" position="after">
                    <page string="Siblings">
                        <separator string="Relations"/>
                        <field name="family_member_ids" nolabel="1">
                            <tree string="Siblings">
                                <field name="type_id"/>
                                <field name="person_id"/>
                                <field name="note"/>
                            </tree>
                            <form string="Siblings">
                                <group>
                                    <field name="type_id"/>
                                    <field name="person_id"/>
                                    <field name="note"/>
                                </group>
                            </form>
                        </field>
                        <separator string="Brothers"/>
                        <field name="brother_ids" nolabel="1">
                            <tree string="Brothers">
                                <field name="name"/>
                                <field name="enrollment_id"/>
                                <field name="mother_id"/>
                                <field name="father_id"/>
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>

        <record id="res_partner_inherit_tree" model="ir.ui.view">
            <field name="name">res_partner_inherit_tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="pedagogy_base.res_partner_inherited_tree"/>
            <field name="arch" type="xml">
                <field name="tutor_id" position="after">
                    <field name="father_id"/>
                    <field name="mother_id"/>
                </field>
            </field>
        </record>

        <record id="res_partner_inherit_search" model="ir.ui.view">
            <field name="name">res_partner_inherit_search</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="pedagogy_base.res_partner_inherited_search"/>
            <field name="arch" type="xml">
                <filter string="Tutor" position="after">
                    <filter string="Father" name="father_id" context="{'group_by':'father_id'}"/>
                    <filter string="Mother" name="mother_id" context="{'group_by':'mother_id'}"/>
                </filter>
            </field>
        </record>

        <record id="pedagogy_kinship_type_tree" model="ir.ui.view">
            <field name="name">pedagogy_kinship_type_tree</field>
            <field name="model">pedagogy.kinship.type</field>
            <field name="arch" type="xml">
                <tree editable="top" string="Sibling Types">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="pedagogy_kinship_form" model="ir.ui.view">
            <field name="name">Siblings</field>
            <field name="model">pedagogy.kinship</field>
            <field name="arch" type="xml">
                <form string="Siblings" version="7.0">
                    <sheet>
                        <group col="4">
                            <field name="student_id" colspan="4"
                                   context="{'default_is_student':1, 'default_customer':0}"/>
                            <field name="person_id" colspan="2"/>
                            <field name="type_id" colspan="2"/>
                            <newline/>
                            <field name="note" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pedagogy_kinship_type_action" model="ir.actions.act_window">
            <field name="name">Sibling Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pedagogy.kinship.type</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem
                id="menu_kinship_types"
                name="Sibling Types"
                action="pedagogy_kinship_type_action"
                parent="pedagogy_base.menu_secretary_config"
                sequence="40"/>

    </data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="pedagogy_medical_bmi_qualitative_form" model="ir.ui.view">
            <field name="name">pedagogy_medical_bmi_qualitative_form</field>
            <field name="model">pedagogy.medical.bmi.qualitative</field>
            <field name="arch" type="xml">
                <form string="BMI" version="7.0">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="bmi_from"/>
                            <field name="bmi_to"/>
                            <field name="observations"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pedagogy_medical_bmi_qualitative_tree" model="ir.ui.view">
            <field name="name">pedagogy_medical_bmi_qualitative_tree</field>
            <field name="model">pedagogy.medical.bmi.qualitative</field>
            <field name="arch" type="xml">
                <tree editable="top" string="BMI">
                    <field name="name"/>
                    <field name="bmi_from"/>
                    <field name="bmi_to"/>
                    <field name="observations"/>
                </tree>
            </field>
        </record>

        <record id="pedagogy_medical_bmi_qualitative_action" model="ir.actions.act_window">
            <field name="name">BMI</field>
            <field name="res_model">pedagogy.medical.bmi.qualitative</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>

        <menuitem
                id="menu_medical_bmi"
                name="BMI"
                parent="pedagogy_base.menu_secretary_config"
                action="pedagogy_medical_bmi_qualitative_action"
                sequence="30"/>

    </data>
</openerp>

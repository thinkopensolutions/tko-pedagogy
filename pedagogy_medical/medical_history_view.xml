<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="pedagogy_medical_history_form" model="ir.ui.view">
            <field name="name">pedagogy_medical_history_form</field>
            <field name="model">pedagogy.medical.history</field>
            <field name="arch" type="xml">
                <form string="Medical" version="7.0">
                    <sheet>
                        <group col="4">
                            <field name="student_id" colspan="4"/>
                            <field name="issue" colspan="4"/>
                            <field name="action" colspan="4"/>
                            <field name="user_id" readonly="1" colspan="2"/>
                            <field name="date" readonly="1" colspan="2"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pedagogy_medical_history_tree" model="ir.ui.view">
            <field name="name">pedagogy_medical_history_tree</field>
            <field name="model">pedagogy.medical.history</field>
            <field name="arch" type="xml">
                <tree string="Medical Report">
                    <field name="student_id"/>
                    <field name="issue"/>
                    <field name="action"/>
                    <field name="user_id"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <record id="pedagogy_medical_history_search" model="ir.ui.view">
            <field name="name">pedagogy_medical_history_search</field>
            <field name="model">pedagogy.medical.history</field>
            <field name="arch" type="xml">
                <search>
                    <field name="student_id"/>
                    <field name="date"/>
                    <field name="issue"/>
                    <field name="action"/>
                    <group string="Group By...">
                        <filter string="Student" name="student_id" context="{'group_by':'student_id'}"/>
                        <filter string="User" name="user_id" context="{'group_by':'user_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="pedagogy_medical_history_action" model="ir.actions.act_window">
            <field name="name">Medical Report</field>
            <field name="res_model">pedagogy.medical.history</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="pedagogy_medical_history_search"/>
            <field name="view_id" ref="pedagogy_medical_history_tree"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>

        <menuitem id="menu_action_medical_report_all"
                  action="pedagogy_medical_history_action"
                  name="Medical"
                  parent="pedagogy_base.menu_pedagogy_reporting"/>

    </data>
</openerp>

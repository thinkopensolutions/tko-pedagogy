<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="pedagogy_classifications_matrix_selection_form" model="ir.ui.view">
            <field name="name">Classifications Matrix</field>
            <field name="model">pedagogy.classifications.matrix.selection</field>
            <field name="arch" type="xml">
                <form string="Classifications Matrix" version="7.0">
                    <header>
                        <button name="create_matrix" string="Load Matrix" type="object" default_focus="1"/>
                    </header>
                    <sheet>
                        <group colspan="6">
                            <separator string="Choose Evaluation" colspan="6"/>
                            <field name="evaluation_id"
                                   groups="pedagogy_base.group_pedagogy_coordinator,pedagogy_base.group_pedagogy_pedagogy"/>
                            <field name="all_evaluations"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_pedagogy_classifications_matrix_class_selection" model="ir.actions.act_window">
            <field name="name">Classifications Matrix</field>
            <field name="res_model">pedagogy.classifications.matrix.selection</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
        </record>

        <record id="action_pedagogy_classifications_matrix_all_selection" model="ir.actions.act_window">
            <field name="name">Classifications Matrix</field>
            <field name="res_model">pedagogy.classifications.matrix.selection</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
        </record>

        <menuitem
                id="menu_pedagogy_classifications_class_matrix"
                name="Classifications by Class"
                parent="menu_classifications_root"
                action="action_pedagogy_classifications_matrix_class_selection"
                sequence="20"
        />

    </data>
</openerp>

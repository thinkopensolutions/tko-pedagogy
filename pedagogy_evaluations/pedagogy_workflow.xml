<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="note_wkf" model="workflow">
            <field name="name">note.wkf</field>
            <field name="osv">pedagogy.evaluation.student</field>
            <field name="on_create">True</field>
        </record>

        <record model="workflow.activity" id="act_draft">
            <field name="wkf_id" ref="note_wkf"/>
            <field name="flow_start">True</field>
            <field name="name">Draft</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'draft'})
                write_history()
            </field>
        </record>

        <record model="workflow.activity" id="act_confirm">
            <field name="wkf_id" ref="note_wkf"/>
            <field name="name">Confirm</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'confirmed'})
                check_factors()
                write_history()
            </field>
        </record>

        <record model="workflow.activity" id="act_approve">
            <field name="wkf_id" ref="note_wkf"/>
            <field name="name">Approve</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'approved'})
                write_history()
            </field>
        </record>

        <record model="workflow.activity" id="act_suspend">
            <field name="wkf_id" ref="note_wkf"/>
            <field name="name">Suspend</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'suspended'})
                write_history()
            </field>
        </record>

        <record model="workflow.transition" id="t1">
            <field name="act_from" ref="act_draft"/>
            <field name="act_to" ref="act_confirm"/>
            <field name="signal">set_confirm</field>
        </record>

        <record model="workflow.transition" id="t2">
            <field name="act_from" ref="act_confirm"/>
            <field name="act_to" ref="act_draft"/>
            <field name="signal">set_reprove</field>
        </record>

        <record model="workflow.transition" id="t3">
            <field name="act_from" ref="act_confirm"/>
            <field name="act_to" ref="act_approve"/>
            <field name="signal">set_approve</field>
        </record>

        <record model="workflow.transition" id="t4">
            <field name="act_from" ref="act_approve"/>
            <field name="act_to" ref="act_confirm"/>
            <field name="signal">set_cancel</field>
        </record>

        <record model="workflow.transition" id="t5">
            <field name="act_from" ref="act_approve"/>
            <field name="act_to" ref="act_suspend"/>
            <field name="signal">set_suspend</field>
        </record>

        <record model="workflow.transition" id="t6">
            <field name="act_from" ref="act_suspend"/>
            <field name="act_to" ref="act_approve"/>
            <field name="signal">set_unsuspend</field>
        </record>

    </data>
</openerp>
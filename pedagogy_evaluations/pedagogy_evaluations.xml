<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="pedagogy_factor_evaluation_form" model="ir.ui.view">
            <field name="name">pedagogy_factor_evaluation_form</field>
            <field name="model">pedagogy.factor.evaluation</field>
            <field name="arch" type="xml">
                <tree string="Evaluations Factors" editable="bottom">
                    <field name="is_summative" invisible="1"/>
                    <field name="evaluation_id" invisible="1" required="0"/>
                    <field name="class_discipline_teacher_id" invisible="1" required="0"/>
                    <field name="percentage"/>
                    <field name="factor_id"/>
                    <field name="factor_evaluation_id" domain="[('id', '&lt;&gt;', evaluation_id)]"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="pedagogy_evaluations_form" model="ir.ui.view">
            <field name="name">pedagogy_evaluations_form</field>
            <field name="model">pedagogy.evaluations</field>
            <field name="arch" type="xml">
                <form string="Evaluation" version="7.0">
                    <sheet>
                        <group col="4">
                            <field name="description" colspan="2"/>
                            <field name="type_id" colspan="2"/>
                            <field name="class_discipline_teacher_id"
                                   on_change="onchange_get_dates_from_year(class_discipline_teacher_id, date_start, date_end)"
                                   colspan="4"/>
                            <field name="date_start"
                                   on_change="onchange_date_start(date_start, class_discipline_teacher_id)"
                                   colspan="2"/>
                            <field name="date_end" on_change="onchange_date_end(date_end, class_discipline_teacher_id)"
                                   colspan="2"/>
                            <field name="observations" colspan="4"/>
                        </group>
                        <notebook>
                            <page string="Factors">
                                <field name="factor_ids" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pedagogy_evaluations_tree" model="ir.ui.view">
            <field name="name">pedagogy_evaluations_tree</field>
            <field name="model">pedagogy.evaluations</field>
            <field name="arch" type="xml">
                <tree string="Evaluations">
                    <field name="name"/>
                    <field name="type_id"/>
                </tree>
            </field>
        </record>

        <record id="pedagogy_evaluations_search" model="ir.ui.view">
            <field name="name">pedagogy_evaluations_search</field>
            <field name="model">pedagogy.evaluations</field>
            <field name="arch" type="xml">
                <search string="Evaluations">
                    <group string="School Year">
                        <filter
                                string="Future Years"
                                name="future_years"
                                domain="[('year_id.this_year', '=', 'future')]"/>
                        <filter
                                string="Next Year"
                                name="next_year"
                                domain="[('year_id.this_year', '=', 'next')]"/>
                        <filter
                                string="This Year"
                                name="this_year"
                                domain="[('year_id.this_year', '=', 'this')]"/>
                        <filter
                                string="Last Year"
                                name="last_year"
                                domain="[('year_id.this_year', '=', 'last')]"/>
                        <filter
                                string="Old Years"
                                name="old_years"
                                domain="[('year_id.this_year', '=', 'old')]"/>
                    </group>
                    <group>
                        <field name="year_id"/>
                        <field name="class_id"/>
                        <field name="discipline_id"/>
                        <field name="teacher_id"/>
                        <field name="description"/>
                    </group>
                    <group string="Group By...">
                        <filter string="Class/Discipline/Teacher" name="class_discipline_teacher_id"
                                context="{'group_by':'class_discipline_teacher_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="pedagogy_evaluations_action" model="ir.actions.act_window">
            <field name="name">Evaluations</field>
            <field name="res_model">pedagogy.evaluations</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="pedagogy_evaluations_search"/>
            <field name="context">{"search_default_this_year":"1"}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add an evaluation.
                </p>
            </field>
        </record>

        <menuitem
                id="menu_evaluations_root"
                name="Evaluations"
                parent="pedagogy_base.menu_pedagogy_config"
                sequence="60"
        />

        <menuitem
                id="menu_evaluations"
                name="Evaluations"
                parent="menu_evaluations_root"
                action="pedagogy_evaluations_action"
                sequence="30"
        />

    </data>
</openerp>

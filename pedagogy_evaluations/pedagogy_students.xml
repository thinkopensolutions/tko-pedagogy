            <field name="model">res.partner</field>
            <field name="inherit_id" ref="pedagogy_base.res_partner_inherited_form"/>
            <field name="arch" type="xml">
                <page string="Enrollments" position="after">
                    <page string="Classifications">
                        <separator string="Classifications"/>
                        <field name="classification_ids" nolabel="1" readonly="1">

<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="pedagogy_class_discipline_teacher_form" model="ir.ui.view">
            <field name="name">pedagogy_class_discipline_teacher_form</field>
            <field name="model">pedagogy.class.discipline.teacher</field>
            <field name="inherit_id" ref="pedagogy_disciplines.pedagogy_class_discipline_teacher_form"/>
            <field name="arch" type="xml">
                <field name="observations" position="after">
                    <notebook colspan="4">
                        <page string="Evaluations">
                            <field name="evaluation_ids" nolabel="1"
                                   context="{'class_discipline_teacher_id': active_id}">
                                <tree string="Evaluations">
                                    <field name="type_id"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </field>
            </field>
        </record>

    </data>
</openerp>

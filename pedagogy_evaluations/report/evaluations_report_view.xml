<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_evaluations_report_tree" model="ir.ui.view">
            <field name="name">evaluations.report.tree</field>
            <field name="model">pedagogy.evaluations.report</field>
            <field name="arch" type="xml">
                <tree string="Evaluations Report">
                    <field name="year_id"/>
                    <field name="area_id"/>
                    <field name="group_id"/>
                    <field name="class_id"/>
                    <field name="discipline_id"/>
                    <field name="teacher_id"/>
                    <field name="student_id"/>
                    <field name="discipline_area_id"/>
                    <field name="evaluation_type_id"/>
                    <field name="arithmetic_note"/>
                    <field name="teacher_note"/>
                    <field name="final_note"/>
                </tree>
            </field>
        </record>

        <record id="view_evaluations_report_form" model="ir.ui.view">
            <field name="name">evaluations.report.form</field>
            <field name="model">pedagogy.evaluations.report</field>
            <field name="arch" type="xml">
                <form string="Evaluations Report">
                    <field name="student_id"/>
                    <field name="evaluation_type_id"/>
                    <field name="discipline_id"/>
                    <field name="discipline_area_id"/>
                    <field name="class_id"/>
                    <field name="year_id"/>
                    <field name="group_id"/>
                    <field name="area_id"/>
                    <field name="teacher_id"/>
                    <field name="arithmetic_note"/>
                    <field name="teacher_note"/>
                    <field name="final_note"/>
                </form>
            </field>
        </record>

        <record id="view_evaluations_report_search" model="ir.ui.view">
            <field name="name">evaluations.report.search</field>
            <field name="model">pedagogy.evaluations.report</field>
            <field name="arch" type="xml">
                <search string="Evaluations Report">
                    <group string="School Year">
                        <filter
                                string="Future Years"
                                name="future_years"
                                domain="[('year_id.this_year', '=', 'future')]"/>
                        <filter
                                string="Next Year"
                                name="next_year"
                                domain="[('year_id.this_year', '=', 'next')]"/>
                        <filter
                                string="This Year"
                                name="year_id.this_year"
                                domain="[('year_id.this_year', '=', 'this')]"/>
                        <filter
                                string="Last Year"
                                name="last_year"
                                domain="[('year_id.this_year', '=', 'last')]"/>
                        <filter
                                string="Old Years"
                                name="old_years"
                                domain="[('year_id.this_year', '=', 'old')]"/>
                    </group>
                    <group>
                        <field name="year_id"/>
                        <field name="class_id"/>
                        <field name="discipline_id"/>
                        <field name="teacher_id"/>
                        <field name="student_id"/>
                    </group>
                    <group expand="0" string="Group By...">
                        <filter string="Year" name="year_id" context="{'group_by':'year_id'}"/>
                        <filter string="Area" name="area_id" context="{'group_by':'area_id'}"/>
                        <filter string="Group" name="group_id" context="{'group_by':'group_id'}"/>
                        <filter string="Class" name="class_id" context="{'group_by':'class_id'}"/>
                        <filter string="Disc. Area" name="discipline_area_id"
                                context="{'group_by':'discipline_area_id'}"/>
                        <filter string="Discipline" name="discipline_id" context="{'group_by':'discipline_id'}"/>
                        <filter string="Teacher" name="teacher_id" context="{'group_by':'teacher_id'}"/>
                        <filter string="Student" name="student_id" context="{'group_by':'student_id'}"/>
                        <filter string="Eval. Type" name="evaluation_type_id"
                                context="{'group_by':'evaluation_type_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_evaluations_report_all" model="ir.actions.act_window">
            <field name="name">Evaluations Report</field>
            <field name="res_model">pedagogy.evaluations.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="search_view_id" ref="view_evaluations_report_search"/>
            <field name="view_id" ref="view_evaluations_report_tree"/>
            <field name="context">{"search_default_this_year":"this"}</field>
        </record>

        <menuitem action="action_evaluations_report_all" id="menu_action_evaluations_report_all"
                  name="Evaluations"
                  parent="pedagogy_base.menu_pedagogy_reporting"
        />

    </data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="pedagogy_non_lective_days_form" model="ir.ui.view">
            <field name="name">pedagogy_non_lective_days_form</field>
            <field name="model">pedagogy.non.lective.days</field>
            <field name="arch" type="xml">
                <form string="Task edition" version="7.0">
                    <sheet>
                        <group col="4">
                            <field name="name" colspan="4"/>
                            <field name="school_year_id" colspan="2"/>
                            <field name="group_area_id" colspan="2"/>
                            <field name="date_start" colspan="2"/>
                            <field name="date_end" colspan="2"/>
                        </group>
                        <separator string="Observations" colspan="4"/>
                        <field name="observations" nolabel="1" colspan="4"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pedagogy_non_lective_days_tree" model="ir.ui.view">
            <field name="name">pedagogy_non_lective_days_tree</field>
            <field name="model">pedagogy.non.lective.days</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Non Lective Days">
                    <field name="name"/>
                    <field name="date_start"/>
                    <field name="school_year_id"/>
                </tree>
            </field>
        </record>

        <record id="pedagogy_non_lective_days_action" model="ir.actions.act_window">
            <field name="name">Non Lective Days</field>
            <field name="res_model">pedagogy.non.lective.days</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="pedagogy_non_lective_days_tree"/>
            <field name="domain">[]</field>
        </record>

        <menuitem
                id="menu_pedagogy_non_lective_days"
                name="Non Lective Days "
                action="pedagogy_non_lective_days_action"
                parent="menu_week_time_table_config"
                sequence="10"/>

    </data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="pedagogy_time_table_classes_calendar" model="ir.ui.view">
            <field name="name">pedagogy_time_table_classes_calendar</field>
            <field name="model">pedagogy.time_table</field>
            <field name="arch" type="xml">
                <calendar color="class_year_id" date_start="date_from" date_stop="date_to"
                          string="Pedagogy Time Tables">
                    <field name="discipline_id"/>
                    <field name="teacher_id"/>
                    <field name="class_year_id"/>
                </calendar>
            </field>
        </record>

        <record id="pedagogy_time_table_teachers_calendar" model="ir.ui.view">
            <field name="name">pedagogy_time_table_teachers_calendar</field>
            <field name="model">pedagogy.time_table</field>
            <field name="arch" type="xml">
                <calendar color="teacher_id" date_start="date_from" date_stop="date_to" string="Pedagogy Time Tables">
                    <field name="class_year_id"/>
                    <field name="discipline_id"/>
                    <field name="teacher_id"/>
                </calendar>
            </field>
        </record>

        <record id="pedagogy_time_table_disciplines_calendar" model="ir.ui.view">
            <field name="name">pedagogy_time_table_disciplines_calendar</field>
            <field name="model">pedagogy.time_table</field>
            <field name="arch" type="xml">
                <calendar color="discipline_id" date_start="date_from" date_stop="date_to"
                          string="Pedagogy Time Tables">
                    <field name="class_year_id"/>
                    <field name="teacher_id"/>
                    <field name="discipline_id"/>
                </calendar>
            </field>
        </record>

        <record id="pedagogy_time_table_tree" model="ir.ui.view">
            <field name="name">pedagogy_time_table_tree</field>
            <field name="model">pedagogy.time_table</field>
            <field name="arch" type="xml">
                <tree string="Pedagogy Time Tables">
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="class_year_id"/>
                    <field name="teacher_id"/>
                    <field name="discipline_id"/>
                </tree>
            </field>
        </record>

        <record id="pedagogy_time_table_form" model="ir.ui.view">
            <field name="name">pedagogy_time_table_</field>
            <field name="model">pedagogy.time_table</field>
            <field name="arch" type="xml">
                <form string="Pedagogy Time Tables" version="7.0">
                    <sheet>
                        <group col="4">
                            <field name="owner" invisible="1" colspan="4"/>
                            <field name="class_discipline_teacher_id" attrs="{'readonly': [('owner','=',False)]}"
                                   colspan="4"/>
                            <field name="project_id" readonly="1" colspan="4"/>
                            <field name="date_from" attrs="{'readonly': [('owner','=',False)]}" colspan="2"/>
                            <field name="date_to" attrs="{'readonly': [('owner','=',False)]}" colspan="2"/>
                            <notebook colspan="4">
                                <page string="Tasks">
                                    <group>
                                        <separator string="Planning Tasks" colspan="4"/>
                                        <field name="task_ids"
                                               nolabel="1"
                                               colspan="4"
                                               domain="[('project_id','=',project_id),('state','!=','done'),('state','!=','cancelled')]"
                                               attrs="{'readonly': [('owner','=',False)]}">
                                            <tree editable="top">
                                                <field name="sequence" invisible="1"/>
                                                <field name="name"/>
                                                <field name="content_id"/>
                                                <field name="planned_hours" widget="float_time"/>
                                                <field name="remaining_hours" widget="float_time"/>
                                                <field name="progress" widget="progressbar"/>
                                                <field name="state"/>
                                                <button name="do_open" states="pending,draft,done,cancelled"
                                                        string="Start Task" type="object" icon="gtk-media-play"
                                                        help="For changing to open state"
                                                        invisible="context.get('set_visible',False)"/>
                                                <button name="action_close" states="draft,pending,open" string="Done"
                                                        type="object" icon="terp-dialog-close"
                                                        help="For changing to done state"/>
                                            </tree>
                                        </field>
                                        <separator string="Tasks Execution" colspan="4"/>
                                        <field
                                                name="timesheet_ids"
                                                nolabel="1"
                                                colspan="4"
                                                context="{'task_ids': task_ids}"
                                                attrs="{'readonly': [('owner','=',False)]}">
                                            <tree editable="top" string="Timesheets">
                                                <field name="available_tasks" invisible="1"/>
                                                <field name="task_id" domain="[('id','in',available_tasks)]"/>
                                                <field name="name"/>
                                                <field name="hours" widget="float_time"/>
                                                <field name="date"/>
                                            </tree>
                                        </field>
                                    </group>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pedagogy_time_table_search" model="ir.ui.view">
            <field name="name">pedagogy_time_table_search</field>
            <field name="model">pedagogy.time_table</field>
            <field name="arch" type="xml">
                <search string="Time Table Search">
                    <field name="class_year_id"/>
                    <field name="discipline_id"/>
                    <field name="teacher_id"/>
                </search>
            </field>
        </record>

        <record id="pedagogy_time_table_classes_action" model="ir.actions.act_window">
            <field name="name">Classes Time Table</field>
            <field name="res_model">pedagogy.time_table</field>
            <field name="view_id" ref="pedagogy_time_table_classes_calendar"/>
            <field name="view_type">form</field>
            <field name="view_mode">calendar,tree,form</field>
            <field name="domain">[]</field>
        </record>

        <record id="pedagogy_time_table_teachers_action" model="ir.actions.act_window">
            <field name="name">Teachers Time Table</field>
            <field name="res_model">pedagogy.time_table</field>
            <field name="view_id" ref="pedagogy_time_table_teachers_calendar"/>
            <field name="view_type">form</field>
            <field name="view_mode">calendar,tree,form</field>
            <field name="domain">[]</field>
        </record>

        <record id="pedagogy_time_table_disciplines_action" model="ir.actions.act_window">
            <field name="name">Disciplines Time Table</field>
            <field name="res_model">pedagogy.time_table</field>
            <field name="view_id" ref="pedagogy_time_table_disciplines_calendar"/>
            <field name="view_type">form</field>
            <field name="view_mode">calendar,tree,form</field>
            <field name="domain">[]</field>
        </record>

        <menuitem
                id="menu_time_table"
                name="Time Tables"
                parent="pedagogy_base.menu_pedagogy"
                sequence="9"/>

        <menuitem
                id="menu_time_table_classes"
                name="Classes Time Tables"
                action="pedagogy_time_table_classes_action"
                parent="menu_time_table"
                sequence="10"/>

        <menuitem
                id="menu_time_table_teachers"
                name="Teachers Time Tables"
                action="pedagogy_time_table_teachers_action"
                parent="menu_time_table"
                sequence="20"/>

        <menuitem
                id="menu_time_table_disciplines"
                name="Disciplines Time Tables"
                action="pedagogy_time_table_disciplines_action"
                parent="menu_time_table"
                sequence="30"/>

    </data>
</openerp>

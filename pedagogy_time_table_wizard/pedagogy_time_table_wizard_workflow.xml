<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Activities -->
        <record id="wkf" model="workflow">
            <field name="name">pedagogy_time_table_wizard.wkf</field>
            <field name="osv">pedagogy_time_table_wizard</field>
            <field name="on_create">True</field>
        </record>

        <record id="act_draft" model="workflow.activity">
            <field name="wkf_id" ref="wkf"/>
            <field name="flow_start">True</field>
            <field name="name">draft</field>
        </record>

        <record id="act_done" model="workflow.activity">
            <field name="wkf_id" ref="wkf"/>
            <field name="name">done</field>
            <field name="action">wf_done()</field>
            <field name="kind">function</field>
        </record>

        <record id="act_cancel" model="workflow.activity">
            <field name="wkf_id" ref="wkf"/>
            <field name="flow_stop">True</field>
            <field name="name">cancel</field>
            <field name="action">wf_cancel()</field>
            <field name="kind">function</field>
        </record>

        <!-- Transitions -->
        <!-- <delete id="sale.trans_draft_router" model="workflow.transition" /> -->

        <record id="trans_draft_done" model="workflow.transition">
            <field name="act_from" ref="act_draft"/>
            <field name="act_to" ref="act_done"/>
            <field name="condition">True</field>
            <field name="signal">sign_done</field>
        </record>

        <record id="trans_draft_cancel" model="workflow.transition">
            <field name="act_from" ref="act_draft"/>
            <field name="act_to" ref="act_cancel"/>
            <field name="condition">True</field>
            <field name="signal">sign_cancel</field>
        </record>

        <record id="trans_done_cancel" model="workflow.transition">
            <field name="act_from" ref="act_done"/>
            <field name="act_to" ref="act_cancel"/>
            <field name="condition">True</field>
            <field name="signal">sign_cancel</field>
        </record>

    </data>
</openerp>
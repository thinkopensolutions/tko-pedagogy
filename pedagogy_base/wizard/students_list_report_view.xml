<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="students_list_wizard_form" model="ir.ui.view">
            <field name="name">Student List</field>
            <field name="model">students.list.wizard</field>
            <field name="arch" type="xml">
                <form string="Student List">
                    <field name="pedagogy_school_year_id" colspan="4"/>
                    <newline/>
                    <separator string="Classes" colspan="4"/>
                    <field name="pedagogy_class_ids" nolabel="1" colspan="4"/>
                    <button special="cancel" string="Cancel" icon="gtk-cancel"/>
                    <button name="check_report" string="Print" type="object" icon="gtk-print"/>
                </form>
            </field>
        </record>

        <record id="students_list_wizard_action" model="ir.actions.act_window">
            <field name="name">students_list_wizard_action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">students.list.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
                id="menu_students_list"
                name="Students List"
                parent="menu_pedagogy_reporting"
                action="students_list_wizard_action"/>

    </data>
</openerp>


<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="pedagogy_group_area_form" model="ir.ui.view">
            <field name="name">pedagogy_group_area_form</field>
            <field name="model">pedagogy.group.area</field>
            <field name="arch" type="xml">
                <form string="Group Area" version="7.0">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="coordinator_id"/>
                        </group>
                        <field name="group_ids" context="{'group_area_id': active_id}" colspan="4" nolabel="1"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pedagogy_group_area_tree" model="ir.ui.view">
            <field name="name">pedagogy_group_area_tree</field>
            <field name="model">pedagogy.group.area</field>
            <field name="arch" type="xml">
                <tree string="Group Areas">
                    <field name="name"/>
                    <field name="coordinator_id"/>
                </tree>
            </field>
        </record>

        <record id="pedagogy_group_area_search" model="ir.ui.view">
            <field name="name">pedagogy_group_area_search</field>
            <field name="model">pedagogy.group.area</field>
            <field name="arch" type="xml">
                <search string="Search Group Area">
                    <field name="name"/>
                    <field name="coordinator_id"/>
                    <group expand="0" string="Group By...">
                        <filter string="Coordinator" name="coordinator_id" context="{'group_by':'coordinator_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="pedagogy_group_form" model="ir.ui.view">
            <field name="name">pedagogy_group_form</field>
            <field name="model">pedagogy.group</field>
            <field name="arch" type="xml">
                <form string="Group" version="7.0">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="group_area_id"/>
                        </group>
                        <field name="class_ids" context="{'group_id':active_id}" colspan="4" nolabel="1"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pedagogy_group_tree" model="ir.ui.view">
            <field name="name">pedagogy_group_tree</field>
            <field name="model">pedagogy.group</field>
            <field name="arch" type="xml">
                <tree string="Group">
                    <field name="name"/>
                    <field name="group_area_id"/>
                </tree>
            </field>
        </record>

        <record id="pedagogy_group_search" model="ir.ui.view">
            <field name="name">pedagogy_group_search</field>
            <field name="model">pedagogy.group</field>
            <field name="arch" type="xml">
                <search string="Search Group">
                    <field name="name"/>
                    <field name="group_area_id"/>
                    <group expand="0" string="Group By...">
                        <filter string="Group Area" name="group_area_id" context="{'group_by':'group_area_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="pedagogy_school_year_form" model="ir.ui.view">
            <field name="name">pedagogy_school_year_form</field>
            <field name="model">pedagogy.school.year</field>
            <field name="arch" type="xml">
                <form string="School Year" version="7.0">
                    <sheet>
                        <group col="4">
                            <field name="name" colspan="4"/>
                            <field name="date_start" colspan="2"/>
                            <field name="date_end" colspan="2"/>
                            <field name="coordinator_id" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pedagogy_school_year_tree" model="ir.ui.view">
            <field name="name">pedagogy_school_year_tree</field>
            <field name="model">pedagogy.school.year</field>
            <field name="arch" type="xml">
                <tree string="School Years">
                    <field name="name"/>
                    <field name="coordinator_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </tree>
            </field>
        </record>

        <record id="pedagogy_school_year_search" model="ir.ui.view">
            <field name="name">pedagogy_school_year_search</field>
            <field name="model">pedagogy.school.year</field>
            <field name="arch" type="xml">
                <search string="School Years">
                    <field name="name"/>
                    <field name="coordinator_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="this_year"/>
                    <group string="School Year">
                        <filter
                                string="Future Years"
                                name="future_years"
                                domain="[('this_year', '=', _('future'))]"/>
                        <filter
                                string="Next Year"
                                name="next_year"
                                domain="[('this_year', '=', _('next'))]"/>
                        <filter
                                string="This Year"
                                name="this_year"
                                domain="[('this_year', '=', _('this'))]"/>
                        <filter
                                string="Last Year"
                                name="last_year"
                                domain="[('this_year', '=', _('last'))]"/>
                        <filter
                                string="Old Years"
                                name="old_years"
                                domain="[('this_year', '=', _('old'))]"/>
                    </group>
                    <group string="Group By...">
                        <filter string="Start Date" name="date_start" context="{'group_by':'date_start'}"/>
                        <filter string="End Date" name="date_end" context="{'group_by':'date_end'}"/>
                        <filter string="Coordinator" name="coordinator_id" context="{'group_by':'coordinator_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="pedagogy_group_area_action" model="ir.actions.act_window">
            <field name="name">Group Areas</field>
            <field name="res_model">pedagogy.group.area</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="search_view_id" ref="pedagogy_group_area_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a group area.
                </p>
            </field>
        </record>

        <record id="pedagogy_group_action" model="ir.actions.act_window">
            <field name="name">Groups</field>
            <field name="res_model">pedagogy.group</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="search_view_id" ref="pedagogy_group_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a group.
                </p>
            </field>
        </record>

        <record id="pedagogy_school_year_action" model="ir.actions.act_window">
            <field name="name">School Years</field>
            <field name="res_model">pedagogy.school.year</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="search_view_id" ref="pedagogy_school_year_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a school year.
                </p>
            </field>
        </record>

        <menuitem
                id="menu_secretary_root"
                name="Secretary"
                groups=""
                sequence="25"/>

        <menuitem
                id="menu_secretary"
                name="Secretary"
                parent="menu_secretary_root"
                groups=""
                sequence="10"/>

        <menuitem
                id="menu_secretary_config"
                name="Configuration"
                parent="menu_secretary"
                groups=""
                sequence="100"/>

        <menuitem
                id="menu_school_years"
                name="School Years"
                parent="menu_pedagogy_config"
                action="pedagogy_school_year_action"
                sequence="8"/>

        <menuitem
                id="menu_pedagogy_root"
                name="Pedagogy"
                groups=""
                sequence="28"/>

        <menuitem
                id="menu_pedagogy"
                name="Pedagogy"
                parent="menu_pedagogy_root"
                groups=""
                sequence="10"/>

        <menuitem
                id="menu_pedagogy_config"
                name="Configuration"
                parent="menu_pedagogy"
                groups=""
                sequence="100"/>

        <menuitem
                id="menu_group_areas"
                name="Areas"
                parent="menu_pedagogy_config"
                action="pedagogy_group_area_action"
                sequence="10"/>

        <menuitem
                id="menu_groups"
                name="Groups"
                parent="menu_pedagogy_config"
                action="pedagogy_group_action"
                sequence="20"/>

    </data>
</openerp>
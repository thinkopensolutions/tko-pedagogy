<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="pedagogy_class_year_form" model="ir.ui.view">
            <field name="name">pedagogy_class_year_form</field>
            <field name="model">pedagogy.class.year</field>
            <field name="arch" type="xml">
                <form string="Class Year" version="7.0">
                    <sheet>
                        <group col="4">
                            <field name="name" colspan="4"/>
                            <field name="class_id" colspan="4"/>
                            <field name="year_id"
                                   on_change="onchange_get_dates_from_year(year_id, date_start, date_end)" colspan="4"/>
                            <field name="date_start" on_change="onchange_date_start(date_start, year_id)" colspan="2"/>
                            <field name="date_end" on_change="onchange_date_end(date_end, year_id)" colspan="2"/>
                            <field name="coordinator_id" colspan="4"/>
                            <separator string="Occupancy" colspan="4"/>
                            <field name="capacity" colspan="2"/>
                            <field name="num_students" colspan="2"/>
                            <field name="occupancy" colspan="2"/>
                        </group>
                        <separator string="Enrollments" colspan="4"/>
                        <field name="enrollment_ids" colspan="4" nolabel="1"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pedagogy_class_year_tree" model="ir.ui.view">
            <field name="name">pedagogy_class_year_tree</field>
            <field name="model">pedagogy.class.year</field>
            <field name="arch" type="xml">
                <tree string="Classes Year">
                    <field name="name"/>
                    <field name="coordinator_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="capacity" sum="Capacity"/>
                    <field name="num_students" sum="#Students"/>
                    <field name="occupancy"/>
                </tree>
            </field>
        </record>

        <record id="pedagogy_class_year_search" model="ir.ui.view">
            <field name="name">pedagogy_class_year_search</field>
            <field name="model">pedagogy.class.year</field>
            <field name="arch" type="xml">
                <search string="Classes Year">
                    <field name="name"/>
                    <field name="year_id"/>
                    <field name="class_id"/>
                    <field name="coordinator_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="capacity"/>
                    <group string="School Year">
                        <filter
                                string="Future Years"
                                name="future_years"
                                domain="[('year_id.this_year', '=', 'future')]"/>
                        <filter
                                string="Next Year"
                                name="next_year"
                                domain="[('year_id.this_year', '=', 'next')]"/>
                        <filter
                                string="This Year"
                                name="this_year"
                                domain="[('year_id.this_year', '=', 'this')]"/>
                        <filter
                                string="Last Year"
                                name="last_year"
                                domain="[('year_id.this_year', '=', 'last')]"/>
                        <filter
                                string="Old Years"
                                name="old_years"
                                domain="[('year_id.this_year', '=', 'old')]"/>
                    </group>
                    <group string="Group By...">
                        <filter string="Year" name="year_id" context="{'group_by': 'year_id'}"/>
                        <filter string="Class" name="class_id" context="{'group_by': 'class_id'}"/>
                        <filter string="Class Coordinator" name="coordinator_id"
                                context="{'group_by': 'coordinator_id'}"/>
                        <filter string="Start Date" name="date_start" context="{'group_by': 'date_start'}"/>
                        <filter string="End Date" name="date_end" context="{'group_by': 'date_end'}"/>
                        <filter string="Capacity" name="capacity" context="{'group_by': 'capacity'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="pedagogy_class_year_action" model="ir.actions.act_window">
            <field name="name">Classes Year</field>
            <field name="res_model">pedagogy.class.year</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_this_year": "this"}</field>
            <field name="domain">[]</field>
            <field name="search_view_id" ref="pedagogy_class_year_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a class year.
                </p>
            </field>
        </record>

        <menuitem
                id="menu_classes_years"
                name="Classes/Years"
                parent="menu_secretary_config"
                action="pedagogy_class_year_action"
                sequence="10"/>

    </data>
</openerp>

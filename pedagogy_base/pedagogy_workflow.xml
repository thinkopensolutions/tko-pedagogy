<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="enrollment_wkf" model="workflow">
            <field name="name">enrollment.wkf</field>
            <field name="osv">pedagogy.enrollment</field>
            <field name="on_create">True</field>
        </record>

        <record model="workflow.activity" id="act_new">
            <field name="wkf_id" ref="enrollment_wkf"/>
            <field name="flow_start">True</field>
            <field name="name">new</field>
            <field name="kind">dummy</field>
        </record>

        <record model="workflow.activity" id="act_pre_enroll">
            <field name="wkf_id" ref="enrollment_wkf"/>
            <field name="name">pre_enroll</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'pre_enrolled'})
                write_history()
            </field>
        </record>

        <record model="workflow.activity" id="act_enroll">
            <field name="wkf_id" ref="enrollment_wkf"/>
            <field name="name">enroll</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'enrolled'})
                write_history()
                set_sequence()
            </field>
        </record>

        <record model="workflow.activity" id="act_suspend">
            <field name="wkf_id" ref="enrollment_wkf"/>
            <field name="name">suspend</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'suspended'})
                write_history()
            </field>
        </record>

        <record model="workflow.activity" id="act_cancel">
            <field name="wkf_id" ref="enrollment_wkf"/>
            <field name="name">cancel</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'canceled'})
                write_history()
            </field>
        </record>

        <record model="workflow.activity" id="act_renew">
            <field name="wkf_id" ref="enrollment_wkf"/>
            <field name="name">renew</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'new'})
                write_history()
            </field>
        </record>

        <record model="workflow.transition" id="t1">
            <field name="act_from" ref="act_new"/>
            <field name="act_to" ref="act_pre_enroll"/>
            <field name="signal">set_pre_enroll</field>
        </record>

        <record model="workflow.transition" id="t2">
            <field name="act_from" ref="act_pre_enroll"/>
            <field name="act_to" ref="act_enroll"/>
            <field name="signal">set_enroll</field>
        </record>

        <record model="workflow.transition" id="t3">
            <field name="act_from" ref="act_new"/>
            <field name="act_to" ref="act_cancel"/>
            <field name="signal">set_cancel</field>
        </record>

        <record model="workflow.transition" id="t4">
            <field name="act_from" ref="act_new"/>
            <field name="act_to" ref="act_enroll"/>
            <field name="signal">set_enroll</field>
        </record>

        <record model="workflow.transition" id="t5">
            <field name="act_from" ref="act_pre_enroll"/>
            <field name="act_to" ref="act_cancel"/>
            <field name="signal">set_cancel</field>
        </record>

        <record model="workflow.transition" id="t6">
            <field name="act_from" ref="act_enroll"/>
            <field name="act_to" ref="act_cancel"/>
            <field name="signal">set_cancel</field>
        </record>

        <record model="workflow.transition" id="t7">
            <field name="act_from" ref="act_enroll"/>
            <field name="act_to" ref="act_suspend"/>
            <field name="signal">set_suspend</field>
        </record>

        <record model="workflow.transition" id="t8">
            <field name="act_from" ref="act_suspend"/>
            <field name="act_to" ref="act_enroll"/>
            <field name="signal">set_enroll</field>
        </record>

        <record model="workflow.transition" id="t9">
            <field name="act_from" ref="act_suspend"/>
            <field name="act_to" ref="act_cancel"/>
            <field name="signal">set_cancel</field>
        </record>

        <record model="workflow.transition" id="t10">
            <field name="act_from" ref="act_cancel"/>
            <field name="act_to" ref="act_renew"/>
            <field name="signal">set_renew</field>
        </record>

        <record model="workflow.transition" id="t11">
            <field name="act_from" ref="act_renew"/>
            <field name="act_to" ref="act_pre_enroll"/>
            <field name="signal">set_pre_enroll</field>
        </record>

        <record model="workflow.transition" id="t12">
            <field name="act_from" ref="act_renew"/>
            <field name="act_to" ref="act_cancel"/>
            <field name="signal">set_cancel</field>
        </record>

        <record model="workflow.transition" id="t13">
            <field name="act_from" ref="act_renew"/>
            <field name="act_to" ref="act_enroll"/>
            <field name="signal">set_enroll</field>
        </record>

    </data>
</openerp>
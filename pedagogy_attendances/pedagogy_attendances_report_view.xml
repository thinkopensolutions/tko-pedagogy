<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="pedagogy_attendances_report_tree" model="ir.ui.view">
            <field name="name">pedagogy_attendances_report_tree</field>
            <field name="model">pedagogy.attendances.report</field>
            <field name="arch" type="xml">
                <tree string="Attendance Report">
                    <field name="enrollment_id"/>
                    <field name="student_id"/>
                    <field name="year_id"/>
                    <field name="area_id"/>
                    <field name="group_id"/>
                    <field name="class_id"/>
                    <field name="discipline_id"/>
                    <field name="teacher_id"/>
                    <field name="date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="pedagogy_attendances_report_form" model="ir.ui.view">
            <field name="name">pedagogy_attendances_report_form</field>
            <field name="model">pedagogy.attendances.report</field>
            <field name="arch" type="xml">
                <form string="Attendance Report" version="7.0">
                    <sheet>
                        <group>
                            <field name="enrollment_id"/>
                            <field name="student_id"/>
                            <field name="year_id"/>
                            <field name="area_id"/>
                            <field name="group_id"/>
                            <field name="class_id"/>
                            <field name="discipline_id"/>
                            <field name="teacher_id"/>
                            <field name="date"/>
                            <field name="state"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pedagogy_attendances_report_search" model="ir.ui.view">
            <field name="name">pedagogy_attendances_report_search</field>
            <field name="model">pedagogy.attendances.report</field>
            <field name="arch" type="xml">
                <search>
                    <group string="Filter By...">
                        <filter string="Present" name="present" domain="[('state','=','present')]"/>
                        <filter string="Unjustified" name="unjustified" domain="[('state','=','unjustified')]"/>
                        <filter string="Justified" name="justified" domain="[('state','=','justified')]"/>
                        <group string="School Year">
                            <filter
                                    string="Future Years"
                                    name="future_years"
                                    domain="[('year_id.this_year', '=', 'future')]"/>
                            <filter
                                    string="Next Year"
                                    name="next_year"
                                    domain="[('year_id.this_year', '=', 'next')]"/>
                            <filter
                                    string="This Year"
                                    name="this_year"
                                    domain="[('year_id.this_year', '=', 'this')]"/>
                            <filter
                                    string="Last Year"
                                    name="last_year"
                                    domain="[('year_id.this_year', '=', 'last')]"/>
                            <filter
                                    string="Old Years"
                                    name="old_years"
                                    domain="[('year_id.this_year', '=', 'old')]"/>
                        </group>
                        <field name="year_id"/>
                        <field name="class_id"/>
                        <field name="student_id"/>
                        <field name="state"/>
                    </group>
                    <newline/>
                    <group string="Group By...">
                        <filter string="Year" name="year" context="{'group_by': 'year_id'}"/>
                        <filter string="Area" name="area" context="{'group_by': 'area_id'}"/>
                        <filter string="Group" name="group" context="{'group_by': 'group_id'}"/>
                        <filter string="Class" name="class" context="{'group_by': 'class_id'}"/>
                        <filter string="Discipline" name="discipline" context="{'group_by': 'discipline_id'}"/>
                        <filter string="Teacher" name="teacher" context="{'group_by': 'teacher_id'}"/>
                        <filter string="Student" name="student" context="{'group_by': 'student_id'}"/>
                        <filter string="State" name="state" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="pedagogy_attendances_report_action" model="ir.actions.act_window">
            <field name="name">Attendance Report</field>
            <field name="res_model">pedagogy.attendances.report</field>
            <field name="view_id" ref="pedagogy_attendances_report_tree"/>
            <field name="search_view_id" ref="pedagogy_attendances_report_search"/>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_this_year':'this', 'search_default_unjustified':1}</field>
        </record>

        <menuitem
                id="menu_attendances_report"
                name="Attendances Report"
                action="pedagogy_attendances_report_action"
                parent="pedagogy_base.menu_pedagogy_reporting"/>

    </data>
</openerp>

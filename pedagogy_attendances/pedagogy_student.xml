<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="res_partner_inherited_form" model="ir.ui.view">
            <field name="name">res_partner_inherited_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="pedagogy_base.res_partner_inherited_form"/>
            <field name="arch" type="xml">
                <page string="Enrollments" position="after">
                    <page string="Absences" attrs="{'invisible':[('is_student','=',False)]}">
                        <separator string="Statistics" colspan="4"/>
                        <group col="4">
                            <field name="to_attend" colspan="2"/>
                            <field name="attended_percentage" colspan="2"/>
                            <field name="absents" colspan="2"/>
                            <field name="absents_percentage" colspan="2"/>
                            <field name="absents_justified" colspan="4"/>
                            <field name="absents_unjustified" colspan="4"/>
                        </group>
                        <separator string="Absences" colspan="4"/>
                        <field name="attendance_ids" colspan="4" nolabel="1" readonly="1">
                            <tree string="Attendances" colors="red:state=='unjustified';gray:state=='justified';">
                                <field name="class_discipline_teacher_id"/>
                                <field name="date_start"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>

    </data>
</openerp>

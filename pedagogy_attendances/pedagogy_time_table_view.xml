<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="pedagogy_time_table_inherited_form" model="ir.ui.view">
            <field name="name">pedagogy_time_table_inherited_form</field>
            <field name="model">pedagogy.time_table</field>
            <field name="inherit_id" ref="pedagogy_time_table.pedagogy_time_table_form"/>
            <field name="arch" type="xml">
                <page string="Tasks" position="after">
                    <page string="Attendance">
                        <separator string="Students" colspan="4"/>
                        <field name="pedagogy_student_attendance_ids" nolabel="1" colspan="4" readonly="1">
                            <tree string="Pages" colors="red:state=='unjustified';">
                                <field name="enrollment_id"/>
                                <field name="student_id"/>
                                <field name="state"/>
                                <button name="set_present"
                                        type="object"
                                        icon="gtk-apply"
                                        string="Present"
                                        help="Student Present"
                                        states="unknown,unjustified,justified"/>
                                <button name="set_unjustified"
                                        icon="gtk-cancel"
                                        type="object"
                                        string="Missing"
                                        help="Student Missing"
                                        states="unknown,present,justified"/>
                            </tree>
                        </field>
                        <group colspan="6" col="6">
                            <label colspan="4" string=" "/>
                            <button type="object" name="update_attendance_sheet" string="Get Students" colspan="2"/>
                        </group>
                    </page>
                </page>
            </field>
        </record>

    </data>
</openerp>

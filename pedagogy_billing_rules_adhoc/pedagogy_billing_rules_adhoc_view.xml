<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_billing_form" model="ir.ui.view">
            <field name="name">pedagogy.billing.form</field>
            <field name="model">pedagogy.billing</field>
            <field name="inherit_id" ref="pedagogy_billing.view_billing_form"/>
            <field name="arch" type="xml">
                <field name="input_line_ids" position="after">
                    <separator string="Ad-Hoc Rules" colspan="4"/>
                    <field name="adhoc_rules" colspan="4" nolabel="1"
                           on_change="update_input_lines(enrollment_id, adhoc_rules, input_line_ids)">
                        <tree string="Ad-Hoc Rules">
                            <field name="name"/>
                            <field name="code"/>
                        </tree>
                    </field>
                </field>
            </field>
        </record>
    </data>
</openerp>

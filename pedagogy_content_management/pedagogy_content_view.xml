<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="pedagogy_content_form" model="ir.ui.view">
            <field name="name">pedagogy_content_form</field>
            <field name="model">pedagogy.content</field>
            <field name="arch" type="xml">
                <form string="Pedagogy Content" version="7.0">
                    <sheet>
                        <group col="4">
                            <separator string="Topic and Group" colspan="4"/>
                            <field name="school_year_id" readonly="1" colspan="4"/>
                            <field name="topic_id" on_change="onchange_topic_id(topic_id)"/>
                            <field name="topic_title"/>
                            <field name="group_id" colspan="4"/>
                            <separator string="Content" colspan="4"/>
                            <field name="discipline_id"/>
                            <field name="content_area_id"/>
                            <field name="name" string="Content Title" colspan="4"/>
                            <separator string=" " colspan="4"/>
                            <field name="planned_time" string="Planned Time" widget="float_time"/>
                            <field name="sequence" string="Number"/>
                        </group>
                        <notebook colspan="4">
                            <page string="Objectives">
                                <group>
                                    <field name="objectives" nolabel="1"/>
                                </group>
                            </page>
                            <page string="Evaluation">
                                <group>
                                    <field name="general_skills"/>
                                    <field name="specific_skills"/>
                                </group>
                            </page>
                            <page string="Tasks">
                                <field name="task_ids" nolabel="1"/>
                            </page>
                            <page string="Links">
                                <field name="links" nolabel="1">
                                    <tree string="Links">
                                        <field name="url"/>
                                        <field name="description"/>
                                        <field name="user" readonly="1"/>
                                        <field name="date" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pedagogy_content_tree" model="ir.ui.view">
            <field name="name">pedagogy_content_tree</field>
            <field name="model">pedagogy.content</field>
            <field name="arch" type="xml">
                <tree string="Pedagogy Content">
                    <field name="school_year_id"/>
                    <field name="group_id"/>
                    <field name="discipline_id"/>
                    <field name="topic_id"/>
                    <field name="topic_title"/>
                    <field name="name" string="Content Title"/>
                    <field name="planned_time" sum="Total"/>
                </tree>
            </field>
        </record>

        <record id="pedagogy_content_search" model="ir.ui.view">
            <field name="name">pedagogy_content_search</field>
            <field name="model">pedagogy.content</field>
            <field name="arch" type="xml">
                <search string="Content Search">
                    <field name="name"/>
                    <group string="School Year">
                        <filter
                                string="Future Years"
                                name="future_years"
                                domain="[('topic_id.school_year_id.this_year', '=', 'future')]"/>
                        <filter
                                string="Next Year"
                                name="next_year"
                                domain="[('topic_id.school_year_id.this_year', '=', 'next')]"/>
                        <filter
                                string="This Year"
                                name="this_year"
                                domain="[('topic_id.school_year_id.this_year', '=', 'this')]"/>
                        <filter
                                string="Last Year"
                                name="last_year"
                                domain="[('topic_id.school_year_id.this_year', '=', 'last')]"/>
                        <filter
                                string="Old Years"
                                name="old_years"
                                domain="[('topic_id.school_year_id.this_year', '=', 'old')]"/>
                    </group>
                    <group string="Group By...">
                        <filter string="Group" name="group_id" context="{'group_by': 'group_id'}"/>
                        <filter string="Topic" name="topic_id" context="{'group_by': 'topic_id'}"/>
                        <filter string="Discipline" name="discipline_id" context="{'group_by': 'discipline_id'}"/>
                        <filter string="Area" name="content_area_id" context="{'group_by': 'content_area_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="pedagogy_content_link_form" model="ir.ui.view">
            <field name="name">pedagogy_content_link_form</field>
            <field name="model">pedagogy.content.link</field>
            <field name="arch" type="xml">
                <form string="Pedagogy Content Link" version="7.0">
                    <sheet>
                        <group>
                            <field name="url"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pedagogy_content_action" model="ir.actions.act_window">
            <field name="name">Contents</field>
            <field name="res_model">pedagogy.content</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{"search_default_this_year":"1"}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add content.
                </p>
            </field>
        </record>

        <menuitem
                id="menu_contents"
                name="Content"
                action="pedagogy_content_action"
                parent="menu_content"
                sequence="20"/>

    </data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_enrollments_report_tree" model="ir.ui.view">
            <field name="name">enrollments.report.tree</field>
            <field name="model">pedagogy.enrollments.report</field>
            <field name="inherit_id" ref="pedagogy_base.pedagogy_enrollments_report_tree"/>
            <field name="arch" type="xml">
                <field name="student_id" position="after">
                    <field name="invoicee_id"/>
                </field>
            </field>
        </record>

        <record id="view_enrollments_report_search" model="ir.ui.view">
            <field name="name">enrollments.report.search</field>
            <field name="model">pedagogy.enrollments.report</field>
            <field name="inherit_id" ref="pedagogy_base.pedagogy_enrollments_report_search"/>
            <field name="arch" type="xml">
                <field name="student_id" position="after">
                    <field name="invoicee_id"/>
                </field>
                <filter name="student_id" position="after">
                    <filter string="Invoicee" name="invoicee_id" context="{'group_by':'invoicee_id'}"/>
                </filter>
            </field>
        </record>

    </data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="hr_contract_view_form_billing_inherit" model="ir.ui.view">
            <field name="name">hr.contract.view.form</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="employee_id" position="replace">
                    <field name="employee_id" required="1"/>
                </field>
            </field>
        </record>

        <record id="view_hr_payslip_form_billing_inherit" model="ir.ui.view">
            <field name="name">hr.payslip.form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="employee_id" position="replace">
                    <field name="employee_id"
                           on_change="onchange_employee_id(date_from, date_to, employee_id, contract_id)" required="1"/>
                </field>
            </field>
        </record>

        <record id="hr_salary_rule_form_billing_inherit" model="ir.ui.view">
            <field name="name">hr.salary.rule.form.inherit</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll.hr_salary_rule_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="category_id" position="replace">
                    <field name="category_id" required="1"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
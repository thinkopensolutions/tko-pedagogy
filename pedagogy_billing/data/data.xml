<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <!--  Category -->
        <record id="cat_basic" model="pedagogy.rule.category">
            <field name="name">Base</field>
            <field name="code">BASE</field>
        </record>

        <record id="cat_discounts" model="pedagogy.rule.category">
            <field name="name">Descontos</field>
            <field name="code">DSC</field>
        </record>

        <record id="cat_net" model="pedagogy.rule.category">
            <field name="name">Prestação</field>
            <field name="code">PRS</field>
        </record>

        <!-- Rule -->
        <record id="billing_rule_basic" model="pedagogy.rule">
            <field name="name">Prestação Mensal Base</field>
            <field name="sequence" eval="6"/>
            <field name="code">BASE</field>
            <field name="appears_on_payslip" eval="True"/>
            <field name="billing_category_id" ref="cat_basic"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = enrollment_id.monthly_fee</field>
        </record>

        <!-- NET Valor Base + Descontos -->
        <record id="billing_rule_mensal" model="pedagogy.rule">
            <field name="name">Total Prestação Mensal</field>
            <field name="sequence" eval="100"/>
            <field name="code">PRS</field>
            <field name="appears_on_payslip" eval="True"/>
            <field name="billing_category_id" ref="cat_net"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = categories.BASE + categories.DSC</field>
        </record>

    </data>
</openerp>
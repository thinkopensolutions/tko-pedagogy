<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="pedagogy_group_billing_form" model="ir.ui.view">
            <field name="name">pedagogy_group_billing_form</field>
            <field name="model">pedagogy.group</field>
            <field name="inherit_id" ref="pedagogy_base.pedagogy_group_form"/>
            <field name="arch" type="xml">
                <field name="group_area_id" position="after">
                    <notebook colspan="4">
                        <page string="Contract Template">
                            <group col="4">
                                <field name="date_from" colspan="2"/>
                                <field name="date_to" attrs="{'required':[('date_from','!=',False)]}" colspan="2"/>
                                <field name="fee" attrs="{'required':[('date_from','!=',False)]}" colspan="2"/>
                                <field name="schedule_pay" colspan="2"/>
                                <field name="struct_id" selection="True" attrs="{'required':[('date_from','!=',False)]}"
                                       colspan="2"/>
                                <field name="payment_term_id" colspan="2"/>
                            </group>
                            <separator string="Description"/>
                            <field name="notes" nolabel="1"/>
                        </page>
                    </notebook>
                </field>
            </field>
        </record>

    </data>
</openerp>
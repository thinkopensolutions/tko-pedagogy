<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="pedagogy_enrollment_inherited_form" model="ir.ui.view">
            <field name="name">pedagogy_enrollment_inherited_form</field>
            <field name="model">pedagogy.enrollment</field>
            <field name="inherit_id" ref="pedagogy_base.pedagogy_enrollment_form"/>
            <field name="arch" type="xml">
                <field name="class_year_id" position="replace">
                    <field name="class_year_id" on_change="onchange_class_year(class_year_id)"/>
                </field>
                <page string="History" position="before">
                    <page string="Contract">
                        <group col="4">
                            <group col="2" colspan="2" name="left_column">
                                <separator string="Information" colspan="2"/>
                                <field name="invoicee_id"/>
                                <field name="contract_date_start" attrs="{'required':[('invoicee_id','!=',False)]}"
                                       on_change='date_start_change(student_id, contract_date_start, class_year_id)'/>
                                <field name="contract_date_end" attrs="{'required':[('invoicee_id','!=',False)]}"
                                       on_change='date_end_change(student_id, contract_date_end, class_year_id)'/>
                                <field name="process"/>
                            </group>
                            <group col="4" colspan="2">
                                <separator string="Fee Information" colspan="4"/>
                                <field name="struct_id" attrs="{'required':[('invoicee_id','!=',False)]}" colspan="4"/>
                                <field name="schedule_pay" attrs="{'required':[('invoicee_id','!=',False)]}"
                                       colspan="2"/>
                                <field name="number_of_payments" colspan="2"/>
                                <field name="fee" colspan="2" attrs="{'required':[('invoicee_id','!=',False)]}"/>
                                <field name="monthly_fee" colspan="2"/>
                                <field name="residual"/>
                            </group>
                            <separator colspan="4" string="Notes"/>
                            <field colspan="4" name="notes" nolabel="1"/>
                        </group>
                    </page>
                </page>
            </field>
        </record>

        <record id="pedagogy_enrollment_inherited_tree" model="ir.ui.view">
            <field name="name">pedagogy_enrollment_inherited_tree</field>
            <field name="model">pedagogy.enrollment</field>
            <field name="inherit_id" ref="pedagogy_base.pedagogy_enrollment_tree"/>
            <field name="arch" type="xml">
                <field name="state" position="before">
                    <field name="invoicee_id"/>
                </field>
            </field>
        </record>

        <record id="pedagogy_enrollment_inherited_search" model="ir.ui.view">
            <field name="name">Enrollments</field>
            <field name="model">pedagogy.enrollment</field>
            <field name="inherit_id" ref="pedagogy_base.pedagogy_enrollment_search"/>
            <field name="arch" type="xml">
                <field name="student_id" position="before">
                    <field name="invoicee_id"/>
                </field>
                <filter name="student_id" position="after">
                    <filter string="Invoicee" name="invoicee" domain="[('invoicee_id','!=',False)]"/>
                </filter>
                <filter name="class_year_id" position="after">
                    <filter string="Invoicee" name="invoicee" context="{'group_by':'invoicee_id'}"/>
                </filter>
            </field>
        </record>

    </data>
</openerp>
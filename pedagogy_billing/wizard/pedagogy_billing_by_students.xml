<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_billing_by_students" model="ir.ui.view">
            <field name="name">billing_by_employees</field>
            <field name="model">pedagogy.billing.students</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Billing by Students" version="7.0">
                    <group>
                        <label colspan="4" nolabel="1"
                               string="This wizard will generate bills for all selected students(s) based on the dates and credit note specified on Bills Run."/>
                    </group>
                    <group string="Students" colspan="4">
                        <field name="student_ids" nolabel="1" colspan="4">
                            <tree>
                                <field name="name"/>
                                <field name="tutor_id"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button class="oe_highlight" icon="gtk-execute" string="Generate" name="compute_sheet"
                                type="object"/>
                        or
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_billing_by_students" model="ir.actions.act_window">
            <field name="name">Generate Bills</field>
            <field name="res_model">pedagogy.billing.students</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_billing_by_students"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>

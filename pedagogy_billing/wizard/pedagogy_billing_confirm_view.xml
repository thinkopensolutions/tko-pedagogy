<openerp>
    <data>
        <record id="pedagogy_billing_confirm_view" model="ir.ui.view">
            <field name="name">pedagogy.billing.confirm.form</field>
            <field name="model">pedagogy.billing.confirm</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Confirm Draft Billings" version="7.0">
                    <separator string="Confirm Draft Billings" colspan="4"/>
                    <footer>
                        <button string="Confirm Billings" class="oe_highlight" name="bill_confirm" type="object"
                                default_focus="1"/>
                        <button special="cancel" string="Close"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_pedagogy_billing_confirm"
                    multi="True"
                    key2="client_action_multi" name="Confirm Draft Billings"
                    res_model="pedagogy.billing.confirm" src_model="pedagogy.billing"
                    view_mode="form" target="new" view_type="form"/>

    </data>
</openerp>
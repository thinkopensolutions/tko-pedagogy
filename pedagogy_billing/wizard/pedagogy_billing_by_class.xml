<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_billing_by_class" model="ir.ui.view">
            <field name="name">billing_by_class</field>
            <field name="model">pedagogy.billing.class</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Billing by Class" version="7.0">
                    <group>
                        <label colspan="4" nolabel="1"
                               string="This wizard will generate bills for all student(s) in the selected class(es) based on the dates and credit note specified on Bills Run."/>
                    </group>
                    <group string="Classes" colspan="4">
                        <field name="class_ids" nolabel="1"/>
                    </group>
                    <footer>
                        <button class="oe_highlight" icon="gtk-execute" string="Generate" name="compute_sheet"
                                type="object"/>
                        or
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_billing_by_class" model="ir.actions.act_window">
            <field name="name">Generate Bills</field>
            <field name="res_model">pedagogy.billing.class</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_billing_by_class"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>

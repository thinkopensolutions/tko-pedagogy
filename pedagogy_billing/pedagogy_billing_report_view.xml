<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="pedagogy_billing_report_tree">
            <field name="name">pedagogy.billing.report.tree</field>
            <field name="model">pedagogy.billing.report</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Billing Report">
                    <field name="number"/>
                    <field name="student_id"/>
                    <field name="invoicee_id"/>
                    <field name="name"/>
                    <field name="amount_total"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>
                    <field name="run_id" invisible="1"/>
                    <field name="month" invisible="1"/>
                    <field name="year" invisible="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="pedagogy_billing_report_form">
            <field name="name">pedagogy.billing.report.form</field>
            <field name="model">pedagogy.billing.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Payslip">
                    <group col="6" colspan="4">
                        <field name="student_id"/>
                        <field name="number"/>
                        <field name="date_from"/>
                        <field name="enrollment_id"/>
                        <field name="struct_id"/>
                        <field name="date_to"/>
                        <field name="amount_total"/>
                        <field name="invoicee_id"/>
                        <field name="credit_note" colspan="4"/>
                        <field name="name" colspan="6"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_pedagogy_billing_report_search">
            <field name="name">pedagogy.billing.report.search</field>
            <field name="model">pedagogy.billing.report</field>
            <field name="arch" type="xml">
                <search string="Billing Report">
                    <group string="Filter By...">
                        <filter string="Confirmed" name="confirmed" domain="[('state','=','confirm')]"/>
                        <field name="number"/>
                        <field name="student_id" domain="[('is_student','=',True)]"/>
                        <field name="invoicee_id"/>
                        <field name="name"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="state"/>
                    </group>
                    <group string="Group By...">
                        <filter string="Month" name="month" context="{'group_by':'month'}"/>
                        <filter string="Year" name="year" context="{'group_by':'year'}"/>
                        <filter string="Student" name="student_id" context="{'group_by': 'student_id'}"/>
                        <filter string="Billing Batch" name="run_id" context="{'group_by':'run_id'}"/>
                        <filter string="Invoicee" name="invoicee_id" context="{'group_by': 'invoicee_id'}"/>
                        <filter string="State" name="state" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_pedagogy_billing_report">
            <field name="name">Billings Report</field>
            <field name="res_model">pedagogy.billing.report</field>
            <field name="view_id" ref="pedagogy_billing_report_tree"/>
            <field name="search_view_id" ref="view_pedagogy_billing_report_search"/>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_this_year': 'this'}</field>
        </record>

        <menuitem
                id="menu_billingss_report"
                name="Billings Report"
                action="action_pedagogy_billing_report"
                parent="pedagogy_base.menu_pedagogy_reporting"/>

    </data>
</openerp>
